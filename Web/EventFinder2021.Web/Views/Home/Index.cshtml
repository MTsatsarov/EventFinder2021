@using EventFinder2021.Web.ViewModels.EventViewModels
@using EventFinder2021.Common
@model ListEventViewModel
<head>
</head>
<body>
    <div class="text-center row">
        <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
        <div class="col-md-8">
            <div class="row">
                @foreach (var currEvent in this.Model.Events)
                {
                    <div class="card col-md-3">
                        <img src="@currEvent.ImageUrl" class="mr-3" width="100px">
                        <div class="card-body">
                            <h5 class="card-title">@currEvent.Name</h5>
                            <p class="card-text">@currEvent.Category</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <hr />
</body>
<nav aria-label="...">
    <ul class="pagination justify-content-center">
        <li class="page-item @if (!Model.HasPreviousPage) {<text>disabled</text>} ">
            <a class="page-link" asp-action="Index" asp-route-id="@Model.PreviousPageNumber">Previous</a>
        </li>
        @for (int i = Model.PageNumber - 3; i < Model.PageNumber; i++)
        {
            if (i > 0)
            {
                <li class="page-item"><a class="page-link" asp-action="Index" asp-route-id="@i">@i</a></li>
            }

        }

        <li class="page-item active">
            <a class="page-link" asp-action="Index" asp-route-id="@Model.PageNumber">@Model.PageNumber <span class="sr-only">(current)</span></a>
        </li>
        @for (int i = Model.PageNumber + 1; i <= Model.PageNumber+3; i++)
        {
            if (i <= Model.PagesCount)
            {
                <li class="page-item"><a class="page-link" asp-action="Index" asp-route-id="@i">@i</a></li>
            }

        }
        <li class="page-item @if (!Model.HasNextPage) {<text>disabled</text>} ">
            <a class="page-link" asp-action="Index" asp-route-id="@Model.NextPage">Next</a>
        </li>
    </ul>
</nav>