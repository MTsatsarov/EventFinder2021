@using EventFinder2021.Services.Models
@model PostReplyModel

<body>
    <form method="post">
        <div class="form-group">
            <textarea asp-for="@Model.Content"></textarea>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="@Model.ComentaryId" value="@Model.ComentaryId" />
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="@Model.UserId" value="@Model.UserId" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-dark">Send</button>
        </div>
    </form>
</body>