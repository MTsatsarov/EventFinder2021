@using EventFinder2021.Web.ViewModels.EventViewModels
@using EventFinder2021.Data.Models.Enums
@model EventViewModel

@{ ViewData["Title"] = "Edit recipe";

<h1>@ViewData["Title"]</h1>
    }

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category"></label>
        <select asp-items="@Html.GetEnumSelectList<Category>()" asp-for="Category" class="form-control"></select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City"></label>
        <select asp-items="@Html.GetEnumSelectList<City>()" asp-for="City" class="form-control"></select>
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input class="form-control" asp-for="@Model.Date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <hr />
    <button type="submit" class="btn btn-success">Save changes</button>
</form>

