@using EventFinder2021.Web.ViewModels.EventViewModels
@using EventFinder2021.Data.Models.Enums
@model CreateEventInputModel

    <body>
        <link rel="stylesheet" href="~/css/CreateEvent.css" />
        <div class="col-md-10">
            <h2 class="text-center">You can create your event here !</h2>
            <form method="post" enctype="multipart/form-data" onloadeddata="focused()">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input class="form-control" asp-for="@Model.Name" />
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea class="form-control" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City"></label>
                    <select class="form-control" asp-for="@Model.City" asp-items="@Html.GetEnumSelectList<City>()"></select>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category"></label>
                    <select class="form-control" asp-for="@Model.Category" asp-items="@Html.GetEnumSelectList<Category>()"></select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date"></label>
                    <input class="form-control" asp-for="@Model.Date" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image"></label>
                    <input class="form-control-file" asp-for="@Model.Image" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div>

                    <button type="submit" class="btn btn-success form-control">Submit</button>
                </div>
            </form>
        </div>

        <script>
            function focused() {
                var divs = Array.from(document.querySelectorAll("DIV")).forEach(x => {
                    x.style.backgroundColor = 'green';
                });
                console.log(divs);
            }
        </script>
    </body>